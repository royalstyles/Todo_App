<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todo_App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DeepSkyBlue</item> <!-- 액션바 배경색 -->
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item> <!-- 상태바 배경색 설정 -->
        <item name="android:windowTranslucentStatus">true</item> <!-- 상태바를 투명으로 설정하려면 true로 설정하세요. -->
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- 밝은 색 배경일 경우 글자색을 어둡게 한다. -->
    </style>

    <style name="Theme.Todo_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Todo_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Todo_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>